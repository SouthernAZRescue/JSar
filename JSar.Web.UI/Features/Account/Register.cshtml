@using JSar.Web.UI.Features.Account
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Register"  asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

            <h4>Create a new account.</h4>
            <br />

            <div asp-validation-summary="All"></div>
            
            <formfield asp-for="FirstName"></formfield>
            <formfield asp-for="LastName"></formfield>
            <formfield asp-for="PrimaryPhone"></formfield>
            <formfield asp-for="Email"></formfield>
            <formfield asp-for="Password"></formfield>
            <formfield asp-for="ConfirmPassword"></formfield>
            <formfield asp-for="RememberMe"></formfield>

            <button type="submit" class="btn btn-default">Register</button>

        </form>
    </div>    
</div>