@model JSar.Web.UI.Models.AccountViewModels.SignInViewModel
@{
    ViewData["Title"] = "Sign In";
}

<h2>Sign In</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="SignIn" method="post">

            <h4>Create a new account.</h4>
            <br />

            <div asp-validation-summary="All"></div>

            <formfield asp-for="UserName"></formfield>
            <formfield asp-for="Password"></formfield>
            <formfield asp-for="RememberMe"></formfield>

            <button type="submit" class="btn btn-default">Sign In</button>

        </form>
    </div>
</div>