@model JSar.Web.UI.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            <h4>Create a new account.</h4>
            <br />
            
            <formfield asp-for="FirstName"></formfield>
            <formfield asp-for="LastName"></formfield>
            <formfield asp-for="PrimaryPhone"></formfield>
            <formfield asp-for="Email"></formfield>
            <formfield asp-for="Password"></formfield>
            <formfield asp-for="ConfirmPassword"></formfield>

            <button type="submit" class="btn btn-default">Register</button>

        </form>
    </div>    
</div>